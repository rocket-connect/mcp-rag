{
  "name": "@mcp-rag/utils",
  "version": "0.0.0",
  "description": "Utility functions for mcp-rag",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
