  "keywords": [
    "utilities",
    "helpers"
  ],
  "license": "MIT",
  "devDependencies": {
    "@mcp-rag/types": "workspace:*",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "ai": "^5.0.93",
    "neo4j-driver": "^6.0.1",
    "zod": "^4.1.12"
  }
