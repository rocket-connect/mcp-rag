{
  "name": "@mcp-rag/neo4j",
  "version": "0.1.0",
  "description": "Neo4j utilities for MCP RAG - Cypher building and test assertions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run tests/unit/**",
    "test:integration": "vitest run tests/integration/**"
  },
  "peerDependencies": {
    "ai": "^5.0.93",
    "neo4j-driver": "^6.0.1"
  },
  "devDependencies": {
    "@mcp-rag/types": "workspace:*",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^2.1.8",
    "ai": "^5.0.93",
    "neo4j-driver": "^6.0.1",
    "vitest": "^4.0.9"
  },
  "keywords": [
    "neo4j",
    "cypher",
    "testing",
    "mcp",
    "rag"
  ],
  "author": "rconnect.tech",
  "license": "MIT"
}
